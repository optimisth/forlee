<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css"/>
<!-- Add the slick-theme.css if you want default styling -->
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick-theme.css"/>
<script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>

<div class='slider'>
	<% post = Post.where(id: 133).first %>
	<% unless post.blank? %>
		<% unless post.post_attachments.blank? %>
			<div>
				<a href='<%=home_post_path(post.bulletin.list.title, post.bulletin.title, post)%>'>
						<%= image_tag(post.post_attachments.first.avatar.thumb_large.url, id: "p0") %>
				</a>
			</div>
		<% end %>
	<% end %>
	<% @posts.each_with_index do |post, index| %>
		<% unless post.post_attachments.blank? %>
			<div>
				<a href='<%=home_post_path(post.bulletin.list.title, post.bulletin.title, post)%>'>
						<img data-lazy="<%= image_url(post.post_attachments.first.avatar.thumb_large.url)%>" id="p<%=index+1%>">
				</a>
			</div>
		<% end %>
	<% end %>
</div>

<script>
$(document).ready(function () {

$(".slider").slick({
		slidesToShow: 1,
		infinite: true,
		autoplay: true,
		fade: true,
		autoplayspeed: 700,
		adaptiveHeight: true,
		lazyLoad: 'ondemand',
		arrows: false,
		pauseOnHover: false
});
});
</script>

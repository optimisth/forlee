<p id="notice"><%= notice %></p>

<h1>Listing Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= link_to list.title, admin_list_bulletins_path(list) %></td>
        <td><%= list.description %></td>
        <td><%= link_to 'Show', admin_list_path(list) %></td>
        <td><%= link_to 'Edit', edit_admin_list_path(list) %></td>
        <td><%= link_to 'Destroy', admin_list_path(list), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

